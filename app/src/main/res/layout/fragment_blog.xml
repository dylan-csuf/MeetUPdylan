<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:gravity="center_horizontal" android:layout_marginTop="80dp" android:layout_marginRight="40dp" android:layout_marginLeft="40dp" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginBottom="20dp" android:textAlignment="center" android:textSize="22sp" android:id="@+id/tv_title" />

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textAlignment="center" android:textSize="16sp" android:id="@+id/tv_date"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textAlignment="center" android:textSize="16sp" android:id="@+id/tv_blog"  android:layout_gravity="center_vertical|right"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_view_blog"
        android:layout_marginTop="40dp"
        android:text="New Blog"
        android:background="@color/primary"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>